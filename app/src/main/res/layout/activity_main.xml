<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.findmovie.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/userNameInputLayout"
        android:layout_width="@dimen/dp200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp100">

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="@dimen/dp200"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/showDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userNameInputLayout"
        android:layout_marginStart="@dimen/dp5"
        android:layout_toEndOf="@+id/userNameInputLayout"
        android:text="@string/show_details" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userNameInputLayout"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/enter_a_movie_name_to_look_up_on_OMDB"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userNameInputLayout"
        android:layout_below="@+id/userNameInputLayout"
        android:layout_marginTop="@dimen/dp40"
        android:text="@string/movie_details"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/nothing_yet"
        android:textColor="@android:color/black" />
</RelativeLayout>
